{
  "manifest_version": 3,
  "name": "Spelling Cards",
  "description": "Track Spelling  Errors",
  "version": "1.0",
  "icons": {
    "16": "pencil.png",
    "48": "pencil.png",
    "128": "pencil.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "pencil.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["typo.js", "contentScript.js"]
    }
  ],
  "permissions": ["activeTab", "storage", "scripting"]
}
